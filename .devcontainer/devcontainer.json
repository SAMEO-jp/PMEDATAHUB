{
  "name": "React DX Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18",
  "postCreateCommand": "[ -d dx-app ] || npx create-next-app@latest dx-app --typescript --yes && cd dx-app && npm install",
  "postStartCommand": "cd dx-app",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.eslint-plugin-jsx"
      ]
    }
  },
  "forwardPorts": [3000]
}
